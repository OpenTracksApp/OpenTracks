<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/ScrollView" >
  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:padding="8dp" >
    <!-- Google Maps result -->
    <LinearLayout
      android:id="@+id/upload_result_maps_result"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="horizontal" >
      <ImageView
        android:contentDescription="@string/generic_success_title"
        android:id="@+id/upload_result_maps_result_icon"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:src="@drawable/success" />
      <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp" >
        <TextView
          android:text="@string/send_google_maps"
          style="@style/TextMedium" />
        <TextView
          android:text="@string/send_google_maps_url"
          style="@style/TextSmall" />
      </LinearLayout>
    </LinearLayout>
    <!-- Google Fusion Tables result -->
    <LinearLayout
      android:id="@+id/upload_result_fusion_tables_result"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="horizontal" >
      <ImageView
        android:contentDescription="@string/generic_success_title"
        android:id="@+id/upload_result_fusion_tables_result_icon"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:src="@drawable/success" />
      <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp" >
        <TextView
          android:text="@string/send_google_fusion_tables"
          style="@style/TextMedium" />
        <TextView
          android:text="@string/send_google_fusion_tables_url"
          style="@style/TextSmall" />
      </LinearLayout>
    </LinearLayout>
    <!-- Google Docs result -->
    <LinearLayout
      android:id="@+id/upload_result_docs_result"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="horizontal" >
      <ImageView
        android:contentDescription="@string/generic_success_title"
        android:id="@+id/upload_result_docs_result_icon"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:src="@drawable/success" />
      <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp" >
        <TextView
          android:text="@string/send_google_docs"
          style="@style/TextMedium" />
        <TextView
          android:text="@string/send_google_docs_url"
          style="@style/TextSmall" />
      </LinearLayout>
    </LinearLayout>
    <!-- Footer -->
    <TextView
      android:id="@+id/upload_result_success_footer"
      android:padding="8dp"
      android:text="@string/send_google_success_footer"
      style="@style/TextSmall" />
    <TextView
      android:id="@+id/upload_result_error_footer"
      android:padding="8dp"
      android:text="@string/send_google_error"
      style="@style/TextMedium" />
  </LinearLayout>
</ScrollView>