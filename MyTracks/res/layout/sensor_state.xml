<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:orientation="vertical">
  <ScrollView
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_width="fill_parent">
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="vertical">

      <!-- Sensor state -->
      <TextView
        android:text="@string/menu_sensor_state"
        style="@style/SensorStateLabel"/>
      <TextView
        android:id="@+id/sensor_state"
        style="@style/SensorStateValue"/>
  
      <!--  Last sensor time -->
      <TextView
        android:text="@string/sensor_state_last_sensor_time"
        style="@style/SensorStateLabel"/>
      <TextView
        android:id="@+id/sensor_state_last_sensor_time"
        style="@style/SensorStateValue"/>
  
      <!-- Power -->
      <TextView
        android:text="@string/sensor_state_power"
        style="@style/SensorStateLabel"/>
      <TextView
        android:id="@+id/sensor_state_power"
        style="@style/SensorStateValue"/>
  
      <!-- Cadence -->
      <TextView
        android:text="@string/sensor_state_cadence"
        style="@style/SensorStateLabel"/>
      <TextView
        android:id="@+id/sensor_state_cadence"
        style="@style/SensorStateValue"/>
  
      <!-- Heart rate -->
      <TextView
        android:text="@string/sensor_state_heart_rate"
        style="@style/SensorStateLabel"/>
      <TextView
        android:id="@+id/sensor_state_heart_rate"
        style="@style/SensorStateValue"/>
  
      <!-- Battery level -->
      <TextView
        android:text="@string/sensor_state_battery"
        style="@style/SensorStateLabel"/>
      <TextView
        android:id="@+id/sensor_state_battery"
        style="@style/SensorStateValue"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
