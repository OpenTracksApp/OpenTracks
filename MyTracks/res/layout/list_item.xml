<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:gravity="center_vertical"
  android:layout_height="wrap_content"
  android:layout_width="fill_parent"
  android:minHeight="?android:attr/listPreferredItemHeight"
  android:orientation="horizontal"
  android:padding="8dp" >
  <ImageView
    android:contentDescription="@string/icon_track"
    android:id="@+id/list_item_icon"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" />
  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_width="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="horizontal" >
      <TextView
        android:id="@+id/list_item_name"
        android:singleLine="true"
        style="@style/TextLarge" />
      <TextView
        android:id="@+id/list_item_category"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        style="@style/TextSmall" />
    </LinearLayout>
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:orientation="horizontal" >
      <TextView
        android:id="@+id/list_item_total_time"
        android:layout_marginRight="8dp"
        style="@style/ListItemStats" />
      <TextView
        android:id="@+id/list_item_total_distance"
        android:layout_marginRight="8dp"
        style="@style/ListItemStats" />
      <TextView
        android:id="@+id/list_item_start_time"
        style="@style/ListItemStats" />
    </LinearLayout>
    <TextView
        android:id="@+id/list_item_recording"
        android:singleLine="true"
        style="@style/TextSmall" />
    <TextView
      android:id="@+id/list_item_description"
      android:singleLine="false"
      android:textColor="@android:color/secondary_text_dark"
      style="@style/TextSmall" />
  </LinearLayout>
</LinearLayout>