<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:text="@string/help_feature_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:text="@string/help_feature_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_track_map_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:linksClickable="true"
                android:text="@string/help_track_map_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_recording_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:text="@string/help_recording_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_storage_pictures_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:text="@string/help_storage_pictures_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_track_export_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:text="@string/help_track_export_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:text="@string/help_data_google_play_services_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:text="@android:string/no" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_data_storage_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:text="@string/help_data_storage_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_gps_troubleshooting_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:linksClickable="true"
                android:text="@string/help_gps_troubleshooting_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceHeadline6"
                android:layout_marginTop="20dp"
                android:text="@string/help_support_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceBody1"
                android:linksClickable="true"
                android:text="@string/help_support_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
