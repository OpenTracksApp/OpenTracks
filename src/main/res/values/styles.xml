<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom buttons bar -->
    <style name="BottomButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="BottomButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:measureWithLargestChild">true</item>
    </style>

    <style name="BottomButtonDivider">
        <item name="android:background">?android:attr/dividerVertical</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- scroll view -->
    <style name="ScrollView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <!-- scroll view with bottom buttons -->
    <style name="ScrollView.WithBottomButtons">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- horizontal line -->
    <style name="HorizontalLine">
        <item name="android:background">@color/stats_separator</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- card view -->
    <style name="OpenTracksCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">1dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Snackbar -->
    <style name="MaterialSnackbarTheme" parent="@style/Widget.Material3.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.OpenTracks.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>

        <item name="backgroundTint">@android:color/holo_red_dark</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?textAppearanceLabelMedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.OpenTracks.Snackbar" parent="">
        <item name="colorSurface">@android:color/holo_red_dark</item>
        <item name="colorOnSurface">@android:color/holo_red_dark</item>
    </style>

    <style name="Widget.OpenTracks.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabCustomSize">64dp</item>
    </style>

    <style name="MaterialSwitchPreferenceCompat" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/view_preference_switch</item>
    </style>
</resources>
